<!DOCTYPE html>
<html>
  <head>
    <title>Frootbot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div class="logout">
        <%= link_to "Logout", logout_path, method: :delete %>
      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
