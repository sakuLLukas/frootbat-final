<style>
  /* sEt the background color of the page */
  body {
    background-color: #f2f2f2;
  }

  /* center the login form on the page */
  form {
    margin: 0 auto;
    width: 50%;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.3);
  }

  /* style the form input fields and labels */
  label, input[type="email"], input[type="password"] {
    display: block;
    margin-bottom: 10px;
    width: 100%;
    font-size: 16px;
    font-weight: bold;
  }

</style>


<h1>Login</h1>

<%= form_with(url: login_path, method: :post) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in" %>
<% end %>



<%# used the form_with helper method to create a new login form. we use email_field and password_field helper methods to create the email and password input fields %>